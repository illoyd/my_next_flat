- cache do
  -# Favicon
  %link{ rel: "icon",                         href: image_path("favicon.ico") }/

  -# Apple Touch Icons
  - %w( 152 144 120 114 72 57).each do |size|
    %link{ rel: "apple-touch-icon-precomposed", href: image_path("favicon-#{ size }.png"), :sizes => "#{ size }x#{ size }" }/
    %link{ rel: "apple-touch-icon",             href: image_path("favicon-#{ size }.png"), :sizes => "#{ size }x#{ size }" }/

  -# For Microsoft
  %link{ rel: "msapplication-TileColor",      href: '#93C54B' }/
  %link{ rel: "msapplication-TileImage",      href: image_path('favicon-144.png') }/

  -# All others
  - %w( 228 195 128 96 32 16).each do |size|
    %link{ rel: "icon",                       href: image_path("favicon-#{ size }.png"), :sizes => "#{ size }x#{ size }" }/
