- listing = listing_labels unless listing

- if listing.created_at.to_date == Time.now.to_date
  =label2("new", "warning")

- elsif listing.updated_at.to_date == Time.now.to_date
  =label2("updated", "warning")

- if listing.for_sale?
  =label2("#{ listing.kind.downcase } for sale", "buy")

- elsif listing.to_let?
  =label2("#{ listing.kind.downcase } to let", "let")

- else
  =label2("#{ listing.kind.downcase } #{ listing.status }", "default")

=label2(price_for(listing), "price")

- if listing.beds?
  =label2(beds_for(listing), "beds")

- if listing.baths?
  =label2(baths_for(listing), "baths")

- if listing.receptions?
  =label2(receptions_for(listing), "receptions")

- if listing.city?
  =label2(listing.city, "default")

- if listing.outcode?
  =label2(listing.outcode, "default")
