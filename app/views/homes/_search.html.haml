%tr
  %td
    %p.lead
      = link_to search do
        = search.name
    %p.text-muted= search.locations.map{ |location| location.area }.uniq.to_sentence
  
  %td
    .btn-group.pull-right
      = link_to search, class: 'btn btn-default btn-sm' do
        = results_count(search)
        %i.fa.fa-search
      -if can? :edit, search
        = link_to edit_search_path(search), class: 'btn btn-default btn-sm' do
          %i.fa.fa-pencil
      -if can? :delete, search
        = link_to '#', class: 'btn btn-default btn-sm', 'data-toggle'=>"modal", 'data-target'=>"#delete_#{search.id}" do
          %i.fa.fa-trash-o
      = render partial: 'searches/destroy_modal', locals: {search: search}
  
