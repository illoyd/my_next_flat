!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : 'my next flat'
    - cache do
      = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
      %link{href: "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel: "stylesheet"}/
      = javascript_include_tag 'application', 'data-turbolinks-track' => true
      %script{src: 'https://maps.googleapis.com/maps/api/js?sensor=false'}
      = csrf_meta_tags
      %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
      = render partial: 'favicons'
      = yield(:meta) if content_for?(:meta)

  %body{ id: "page-#{ controller_name }" }
    -# Navbar
    = render partial: 'navbar'
      
    -# Layout
    = @map ? render(partial: 'layouts/with_map') : render(partial: 'layouts/with_content')

    -# Ads
    = render partial: 'ads/banner'
